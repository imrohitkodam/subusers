<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="6.0" method="upgrade">
	<name>com_tjqueue</name>
	<author>Techjoomla</author>
	<authorEmail>extensions@techjoomla.com</authorEmail>
	<authorUrl>https://techjoomla.com</authorUrl>
	<copyright>Copyright (c) 2009-2024 Techjoomla. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<creationDate>30th Mar 2020</creationDate>
	<version>1.1.0</version>
	<description>TJQueue component- This extension will provide facility to queue data and process queue as per priority.</description>

	<!-- Minimum requirements -->
	<minimumPhpVersion>8.1</minimumPhpVersion>
	<minimumJoomlaVersion>6.0</minimumJoomlaVersion>

	<!-- Namespace declaration -->
	<namespace path="src">Tjqueue\Component\Tjqueue</namespace>

	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<files folder="site">
		<filename>index.html</filename>
		<filename>tjqueue.php</filename>
	</files>
	<languages folder="site/languages">
		<language tag="en-GB">/en-GB/en-GB.com_tjqueue.ini</language>
	</languages>
	<administration>
		<menu link='index.php?option=com_tjqueue'>TJQueue</menu>
		<files folder="admin">
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
			<filename>tjqueue.php</filename>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>views</folder>
			<folder>libraries</folder>
		</files>
		<languages folder="admin/languages">
			<language tag="en-GB">/en-GB/en-GB.com_tjqueue.ini</language>
			<language tag="en-GB">/en-GB/en-GB.com_tjqueue.sys.ini</language>
		</languages>
	</administration>

	<!-- Service provider -->
	<services>
		<provider>services/provider.php</provider>
	</services>
</extension>
