<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_SUBUSERS_FILTER_SEARCH_LABEL"
			description="COM_SUBUSERS_ACTION_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
			filter="string"
		/>
		<field
			name="client"
			type="sql"
			label="COM_SUBUSERS_FILTER_CLIENT_LABEL"
			description="COM_SUBUSERS_FILTER_CLIENT_LABEL_DESC"
			query="SELECT DISTINCT(client) FROM #__tjsu_actions ORDER BY client ASC" key_field="client" value_field="client"
			onchange="this.form.submit();">
			<option value="">COM_SUBUSERS_SELECT_CLIENT</option>
		</field>
	</fields>

	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			label="COM_SUBUSERS_LIST_LIMIT"
			description="COM_SUBUSERS_LIST_LIMIT_DESC"
			class="input-mini"
			default="25"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
